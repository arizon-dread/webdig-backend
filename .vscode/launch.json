    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/webdig-api/webdig-api.go",
            "buildFlags": "-gcflags='all=-N -l'"
        },
        {
            "name": "Connect to server",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 8080,
            "host": "127.0.0.1"
        },
        
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        },
        {
            "name": "Go Debug Workspace",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}",
            "env": {
            }
        }        
    ]
}